<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_bg__splashscreen_ek2_color"
    >


    <RelativeLayout android:id="@+id/shape"
        android:layout_marginTop="-95dp"
        android:layout_marginStart="-86dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View   android:id="@+id/ellipse_1"
            android:background="@drawable/ellipse_1_shape"
            android:alpha="0.34000000357628"
            android:layout_marginStart="6dp"
            android:layout_marginTop="67dp"
            android:layout_width="160.53dp"
            android:layout_height="158.67dp" />

        <View   android:id="@+id/ellipse_2"
            android:background="@drawable/ellipse_2_shape"
            android:alpha="0.34000000357628"
            android:layout_marginStart="112dp"
            android:layout_marginTop="6dp"
            android:layout_width="160.53dp"
            android:layout_height="158.67dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="cursive"
        android:text="Welcome to North Rift Booking Service"
        android:textColor="@color/already_have_an_account__sign_in_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_your_bus_tickets_with_ease_right_at_the_comfort_of_your_home_"
        android:layout_width="302dp"
        android:layout_height="46.5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Book your Ticket here. Thank You"
        android:textColor="@color/book_your_bus_tickets_with_ease_right_at_the_comfort_of_your_home__color"
        android:textSize="15sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtNorthfirst"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edt_background"
        android:ems="10"
        android:hint="Enter your first name"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textColor="@color/already_have_an_account__sign_in_color"
        android:textColorHint="@color/already_have_an_account__sign_in_color" />

    <EditText
        android:id="@+id/edtNorthSecond"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edt_background"
        android:ems="10"
        android:hint="Enter your Second Name"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:textColor="@color/already_have_an_account__sign_in_color"
        android:textColorHint="@color/already_have_an_account__sign_in_color" />

    <EditText
        android:id="@+id/edtNorthphone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edt_background"
        android:ems="10"
        android:hint="Enter your Phone Number"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:textColor="@color/already_have_an_account__sign_in_color"
        android:textColorHint="@color/already_have_an_account__sign_in_color" />

    <EditText
        android:id="@+id/edtNorthID"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edt_background"
        android:ems="10"
        android:hint="Enter your ID/Passport"
        android:inputType="number"
        android:paddingStart="20dp"
        android:textColor="@color/already_have_an_account__sign_in_color"
        android:textColorHint="@color/already_have_an_account__sign_in_color" />

</RelativeLayout>